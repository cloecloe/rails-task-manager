<br>
<h1>My tasks</h1>

<ul class='list-group list-group-flush'>
  <% @tasks.each do |task| %>
    <li class='list-group-item text-body'>
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
    </i> <%= link_to task.name, task_path(task) %> (<%= link_to "Update", edit_task_path(task) %>)
    <%= link_to task_path(task), method: :delete do %>
      <i class="far fa-trash-alt"></i>
    <% end %>
    </li>
  <% end %>
</ul>

<br>
<div class="text-center">
  <%= link_to new_task_path do %>
    <i class="fas fa-plus"></i> Add a task
  <% end %>
</div>
